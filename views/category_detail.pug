extends layout

block content

  h1 Category: #{category.name}
  p #{category.description}

  div(style='margin-left:20px;margin-top:20px')

    h2(style='font-size: 1.5rem;') Instruments
    if category_instruments.length
      dl
        each instrument in category_instruments
          dt
            a(href=instrument.url) #{instrument.name}
          dd #{instrument.summary}
    else
      p This category has no instruments.
